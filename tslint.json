{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-import-group-ordering",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [
      true,
      {
        "multiline": "always"
      }
    ],
    "prettier": true,
    "import-group-ordering": [
      true,
      {
        "imports-groups": [
          {
            "name": "dependencies"
          },
          {
            "name": "other"
          }
        ],
        "matching-rules": [
          {
            "type": "dependencies",
            "imports-group": "dependencies",
            "disable-native-nodejs-modules": true,
            "from-package.json": true
          },
          {
            "type": "project",
            "matches": ".*",
            "imports-group": "other"
          }
        ]
      }
    ]
  }
}
